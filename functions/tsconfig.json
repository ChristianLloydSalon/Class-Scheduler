{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "ESNext", // Updated to ESNext for the latest syntax support
    "lib": ["esnext", "dom"] // Added ESNext and DOM libraries for better compatibility with modern features
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}

